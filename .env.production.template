# Lumi Commerce production environment template
NODE_ENV=production
APP_NAME=Lumi Commerce Platform
APP_PORT=8080
PORT=8080
API_BASE_URL=https://api.lumi-commerce.com
FRONTEND_URL=https://app.lumi-commerce.com
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=40
DATABASE_SLOW_QUERY_THRESHOLD_MS=100
QUERY_TIMEOUT_MS=5000
REDIS_URL=redis://USER:PASSWORD@HOST:6379
STORAGE_BUCKET=lumi-production-assets
LOG_LEVEL=warn
JWT_SECRET=replace-with-production-secret-value!!
JWT_ACCESS_SECRET=replace-with-production-access-secret-value!!
JWT_REFRESH_SECRET=replace-with-production-refresh-secret-value!!
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=14d
COOKIE_DOMAIN=.lumi-commerce.com
COOKIE_SECRET=replace-with-production-cookie-secret!!
SENTRY_DSN=https://public@sentry.io/1
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=https://app.lumi-commerce.com,https://admin.lumi-commerce.com
CORS_ALLOWED_METHODS=GET,HEAD,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Request-Id
CORS_EXPOSED_HEADERS=X-Request-Id,X-API-Version
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=600
FEATURE_FLAGS={"betaCheckout":false,"enableDebugToolbar":false}
CONFIG_HOT_RELOAD=false
CONFIG_ENCRYPTION_KEY=provide-32-byte-key
CI=true
EMAIL_VERIFICATION_TTL=24h
PASSWORD_RESET_TTL=1h
SESSION_FINGERPRINT_SECRET=replace-with-production-fingerprint-secret!!
LOCKOUT_DURATION=15m
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STRATEGY=redis
RATE_LIMIT_POINTS=300
RATE_LIMIT_DURATION=300
RATE_LIMIT_BLOCK_DURATION=300
RATE_LIMIT_KEY_PREFIX=lumi:rate-limit
RATE_LIMIT_REDIS_URL=redis://USER:PASSWORD@HOST:6379
RATE_LIMIT_AUTH_POINTS=120
RATE_LIMIT_AUTH_DURATION=300
RATE_LIMIT_AUTH_BLOCK_DURATION=600
