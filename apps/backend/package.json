{
  "name": "@lumi/backend",
  "version": "0.0.0",
  "private": true,
  "description": "Backend service for Lumi commerce platform.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "start": "NODE_ENV=production node --enable-source-maps dist/index.js",
    "build": "pnpm --filter @lumi/types build && pnpm --filter @lumi/shared build && tsc --build tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "eslint --cache --cache-location .eslintcache \"src/**/*.{ts,tsx}\"",
    "test": "pnpm run test:jest",
    "test:jest": "jest --config jest.config.cjs --runInBand",
    "test:vitest": "vitest run --passWithNoTests",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "format": "prettier \"src/**/*.{ts,tsx}\" --check"
  },
  "dependencies": {
    "@lumi/shared": "workspace:*",
    "@lumi/types": "workspace:*",
    "@sentry/node": "^8.47.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "prom-client": "^15.1.2",
    "rate-limit-redis": "^4.2.2",
    "rate-limiter-flexible": "^3.0.5",
    "redis": "^5.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-transport": "^4.9.0",
    "xss-clean": "^0.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@lumi/testing": "workspace:*",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-mongo-sanitize": "^2.1.2",
    "@types/hpp": "^0.2.6",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/node": "^20.12.7",
    "@types/supertest": "^2.0.16",
    "openapi-types": "^12.1.3",
    "supertest": "^6.3.4",
    "vitest": "^1.5.0"
  }
}
