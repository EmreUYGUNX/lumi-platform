{
  "name": "@lumi/frontend",
  "version": "0.0.0",
  "private": true,
  "description": "Future Next.js web client for Lumi commerce platform.",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "format": "prettier \"src/**/*.{ts,tsx}\" --check",
    "test": "pnpm run test:jest",
    "test:jest": "jest --config jest.config.cjs --runInBand",
    "analyze": "node ../../tools/scripts/run-next-analyzer.mjs"
  },
  "dependencies": {
    "@lumi/shared": "workspace:*",
    "@lumi/ui": "workspace:*",
    "@lumi/types": "workspace:*",
    "@next/bundle-analyzer": "^14.2.3",
    "next": "^14.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@testing-library/react": "^16.3.0",
    "@lumi/testing": "workspace:*"
  }
}
