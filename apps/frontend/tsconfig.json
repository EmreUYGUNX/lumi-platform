{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/features/*": ["./src/features/*"],
      "@/store/*": ["./src/store/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/types/*": ["./src/types/*"],
      "@/app/layout": ["./src/app/layout.tsx"],
      "@/app/page": ["./src/app/page.tsx"],
      "@/*": ["./src/*"],
      "@lumi/shared": ["../../packages/shared/src/index.ts"],
      "@lumi/shared/*": ["../../packages/shared/src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "strict": true,
    "tsBuildInfoFile": ".next/tsconfig.tsbuildinfo",
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "__mocks__/**/*",
    "__tests__/**/*",
    "e2e/**/*",
    "next-env.d.ts",
    "middleware.ts",
    "scripts/**/*",
    "playwright.config.ts",
    "src/**/*",
    "tailwind.config.ts",
    ".next/types/**/*.ts",
    "vitest.config.ts",
    "vitest.setup.tsx"
  ],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/types"
    }
  ]
}
