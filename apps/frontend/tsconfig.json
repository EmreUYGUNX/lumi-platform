{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/app/layout": ["./src/app/layout.tsx"],
      "@/app/page": ["./src/app/page.tsx"],
      "@/*": ["./src/*"]
    },
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "tsBuildInfoFile": ".next/tsconfig.tsbuildinfo",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "src/**/*", ".next/types/**/*.ts", "__tests__/**/*"],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/types"
    }
  ]
}
