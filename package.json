{
  "name": "lumi-ticaret",
  "version": "0.0.0",
  "private": true,
  "description": "Enterprise-grade monorepo for the Lumi commerce platform.",
  "license": "UNLICENSED",
  "packageManager": "pnpm@9.0.6",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --no-cache",
    "lint": "turbo run lint",
    "test": "turbo run test --parallel",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format",
    "clean": "turbo run clean --parallel",
    "prune:deploy": "pnpm dlx turbo prune --scope=@lumi/backend --scope=@lumi/frontend --scope=@lumi/mobile --include-dependencies --docker",
    "turbo:daemon": "turbo daemon start --no-update-notifier",
    "turbo:daemon:stop": "turbo daemon stop",
    "turbo:daemon:status": "turbo daemon status --no-update-notifier",
    "turbo:daemon:clean": "turbo daemon clean --no-update-notifier",
    "turbo:telemetry:on": "turbo telemetry enable",
    "turbo:telemetry:off": "turbo telemetry disable",
    "turbo:telemetry:status": "turbo telemetry status",
    "env:seal": "node tools/scripts/env-seal.mjs",
    "prepare": "husky install",
    "postinstall": "turbo run postinstall --parallel --continue --no-daemon",
    "lint-staged": "lint-staged --concurrent false",
    "commitlint": "commitlint"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@next/eslint-plugin-next": "^14.2.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rimraf": "^5.0.5",
    "turbo": "^2.1.3",
    "tsx": "^4.7.2",
    "typescript": "~5.5.4",
    "vitest": "^1.5.0"
  },
  "pnpm": {
    "overrides": {
      "eslint": "^8.57.0",
      "typescript": "~5.5.4"
    },
    "packageExtensions": {
      "react-dom@*": {
        "peerDependencies": {
          "react": "*"
        }
      }
    },
    "neverBuiltDependencies": [
      "fsevents"
    ]
  }
}
