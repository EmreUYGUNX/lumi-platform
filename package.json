{
  "name": "lumi-ticaret",
  "version": "0.0.0",
  "private": true,
  "description": "Enterprise-grade monorepo for the Lumi commerce platform.",
  "license": "UNLICENSED",
  "packageManager": "pnpm@9.0.6",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build --no-daemon",
    "dev": "turbo run dev --parallel --no-cache --no-daemon",
    "lint": "turbo run lint --no-daemon",
    "lint:fix": "turbo run lint --no-daemon -- --fix",
    "test": "pnpm exec turbo run test --parallel --no-daemon",
    "test:jest": "pnpm exec turbo run test:jest --no-daemon",
    "test:coverage": "pnpm exec turbo run test --parallel --no-daemon -- --coverage",
    "typecheck": "turbo run typecheck --no-daemon",
    "format": "turbo run format --no-daemon",
    "clean": "turbo run clean --parallel --no-daemon",
    "docker:dev": "docker compose up --build",
    "docker:down": "docker compose down --remove-orphans",
    "audit:security": "pnpm audit --prod",
    "deps:licenses": "pnpm exec license-checker-rseidelsohn --summary --production --excludePrivatePackages --onlyAllow='MIT;ISC;Apache-2.0;BSD-2-Clause;BSD-3-Clause'",
    "deps:duplicates": "node tools/scripts/check-duplicates.mjs",
    "deps:peers": "node tools/scripts/check-peers.mjs",
    "metrics:build": "node tools/scripts/build-metrics.mjs",
    "metrics:dev": "node tools/scripts/dev-metrics.mjs",
    "analyze:bundle": "pnpm --filter @lumi/ui build && pnpm exec size-limit",
    "analyze:frontend": "pnpm --filter @lumi/frontend run analyze",
    "prune:deploy": "pnpm dlx turbo prune --scope=@lumi/backend --scope=@lumi/frontend --scope=@lumi/mobile --include-dependencies --docker",
    "turbo:daemon": "turbo daemon start --no-update-notifier",
    "turbo:daemon:stop": "turbo daemon stop",
    "turbo:daemon:status": "turbo daemon status --no-update-notifier",
    "turbo:daemon:clean": "turbo daemon clean --no-update-notifier",
    "turbo:telemetry:on": "turbo telemetry enable",
    "turbo:telemetry:off": "turbo telemetry disable",
    "turbo:telemetry:status": "turbo telemetry status",
    "doctor": "tsx tools/scripts/doctor.ts",
    "setup": "tsx tools/scripts/setup.ts",
    "clean:workspace": "tsx tools/scripts/clean.ts",
    "verify:workspace": "tsx tools/scripts/verify-workspace.ts",
    "db:setup": "tsx tools/scripts/database-setup.ts",
    "codegen": "tsx tools/scripts/codegen.ts",
    "deps:update": "tsx tools/scripts/deps-update.ts",
    "backup:create": "tsx tools/scripts/backup.ts",
    "backup:restore": "tsx tools/scripts/restore.ts",
    "deploy:prepare": "tsx tools/scripts/deploy-prepare.ts",
    "docs:openapi:generate": "tsx tools/scripts/generate-openapi.ts",
    "docs:openapi:check": "tsx tools/scripts/generate-openapi.ts --check",
    "docs:openapi:lint": "pnpm docs:openapi:check && pnpm exec spectral lint docs/api/openapi.yaml",
    "changelog:generate": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "profile:performance": "tsx tools/scripts/performance-profile.ts",
    "hooks:test": "tsx tools/scripts/test-hooks.ts",
    "env:seal": "node tools/scripts/env-seal.mjs",
    "logs:query": "node tools/scripts/log-query.mjs",
    "security:secrets": "pnpm exec secretlint --maskSecrets \"**/*\"",
    "security:verify": "node tools/scripts/security-verify.mjs",
    "prepare": "husky install",
    "postinstall": "turbo run postinstall --parallel --continue --no-daemon",
    "lint-staged": "lint-staged --concurrent false",
    "commitlint": "commitlint"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@next/eslint-plugin-next": "^14.2.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@faker-js/faker": "^9.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.7",
    "@stoplight/spectral-cli": "6.11.0",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^2.0.16",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-image-snapshot": "^6.4.0",
    "lint-staged": "^15.2.7",
    "license-checker-rseidelsohn": "^4.4.2",
    "pg": "^8.12.0",
    "prettier": "^3.2.5",
    "@size-limit/file": "^11.2.0",
    "size-limit": "^11.2.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.3",
    "yaml": "^2.8.1",
    "@vitest/coverage-v8": "^1.6.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "@secretlint/secretlint-rule-preset-recommend": "^8.3.0",
    "rimraf": "^5.0.5",
    "conventional-changelog-cli": "^4.1.0",
    "secretlint": "^8.3.0",
    "turbo": "^2.1.3",
    "tsx": "^4.7.2",
    "typescript": "~5.5.4",
    "vitest": "^1.5.0"
  },
  "size-limit": [
    {
      "name": "UI package bundle",
      "path": "packages/ui/dist/index.js",
      "limit": "50 KB"
    }
  ],
  "pnpm": {
    "overrides": {
      "eslint": "^8.57.0",
      "typescript": "~5.5.4",
      "@opentelemetry/api-logs": "0.57.2",
      "@opentelemetry/instrumentation": "0.57.2",
      "@opentelemetry/semantic-conventions": "1.37.0",
      "@types/pg": "8.15.5",
      "body-parser": "1.20.3",
      "mime": "1.6.0",
      "cookie": "0.7.2",
      "negotiator": "0.6.4",
      "@stoplight/spectral-core": "1.18.3",
      "@stoplight/spectral-parsers": "1.0.3",
      "@stoplight/spectral-formatters": "1.3.0",
      "@stoplight/spectral-ref-resolver": "1.0.4",
      "@stoplight/spectral-rulesets": "1.5.2",
      "@stoplight/spectral-ruleset-bundler": "1.5.2",
      "@stoplight/spectral-ruleset-migrator": "1.9.5",
      "@stoplight/spectral-runtime": "1.1.2",
      "@stoplight/better-ajv-errors": "1.0.1",
      "@stoplight/spectral-formats": "1.5.0",
      "@stoplight/spectral-functions": "1.7.2"
    },
    "packageExtensions": {
      "react-dom@*": {
        "peerDependencies": {
          "react": "*"
        }
      }
    },
    "neverBuiltDependencies": [
      "fsevents"
    ]
  }
}
