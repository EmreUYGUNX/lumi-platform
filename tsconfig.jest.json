{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "outDir": "./dist-jest",
    "noEmitOnError": false,
    "allowJs": true,
    "composite": false,
    "incremental": false,
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "@/*": ["src/*", "apps/frontend/src/*", "apps/backend/src/*"],
      "@/app/layout": ["apps/frontend/src/app/layout.tsx"],
      "@/app/page": ["apps/frontend/src/app/page.tsx"],
      "@lumi/shared": ["packages/shared/src/index.ts"],
      "@lumi/shared/*": ["packages/shared/src/*"],
      "@lumi/shared/dto": ["packages/shared/src/dto/index.ts"],
      "@lumi/shared/dto/*": ["packages/shared/src/dto/*"],
      "@lumi/types": ["packages/types/src/index.ts"],
      "@lumi/types/*": ["packages/types/src/*"],
      "@lumi/testing": ["packages/testing/src/index.ts"],
      "@lumi/testing/*": ["packages/testing/src/*"],
      "@lumi/testing/jest": ["packages/testing/src/assertions/jest.ts"]
    }
  }
}
