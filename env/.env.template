METRICS_BASIC_AUTH_USERNAME=metrics
METRICS_BASIC_AUTH_PASSWORD=change-me
ALERTING_ENABLED=false
ALERTING_WEBHOOK_URL=
ALERTING_SEVERITY=error
HEALTH_UPTIME_GRACE_PERIOD=30
FEATURE_FLAGS={}
