{
  "title": "Lumi Backend Observability",
  "uid": "lumi-backend-observability",
  "version": 1,
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timezone": "browser",
  "templating": {
    "list": []
  },
  "panels": [
    {
      "title": "Request Rate",
      "type": "graph",
      "id": 1,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(lumi_http_requests_total[5m])) by (method, status)",
          "legendFormat": "{{method}} {{status}}",
          "refId": "A"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "nullPointMode": "connected",
      "tooltip": {
        "shared": true,
        "sort": 0
      },
      "yaxes": [
        {
          "format": "ops",
          "logBase": 1,
          "min": 0
        },
        {
          "format": "short",
          "logBase": 1,
          "show": false
        }
      ]
    },
    {
      "title": "Request Latency (p95)",
      "type": "graph",
      "id": 2,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(lumi_operation_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95 latency",
          "refId": "A"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "nullPointMode": "connected",
      "yaxes": [
        {
          "format": "s",
          "min": 0
        },
        {
          "format": "short",
          "show": false
        }
      ]
    },
    {
      "title": "Event Loop Delay (p99)",
      "type": "graph",
      "id": 3,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(lumi_event_loop_delay_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99 delay",
          "refId": "A"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "yaxes": [
        {
          "format": "s",
          "min": 0
        },
        {
          "format": "short",
          "show": false
        }
      ]
    },
    {
      "title": "Process Memory Usage",
      "type": "graph",
      "id": 4,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "targets": [
        {
          "expr": "lumi_process_memory_usage_bytes",
          "legendFormat": "{{segment}}",
          "refId": "A"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "yaxes": [
        {
          "format": "bytes",
          "min": 0
        },
        {
          "format": "short",
          "show": false
        }
      ]
    },
    {
      "title": "Service Uptime",
      "type": "stat",
      "id": 5,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 7,
        "w": 8,
        "x": 0,
        "y": 17
      },
      "targets": [
        {
          "expr": "lumi_uptime_seconds",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 0
        },
        "overrides": []
      }
    },
    {
      "title": "Alerts Triggered",
      "type": "table",
      "id": 6,
      "datasource": "Prometheus",
      "gridPos": {
        "h": 7,
        "w": 16,
        "x": 8,
        "y": 17
      },
      "targets": [
        {
          "expr": "sum(increase(lumi_alerts_total[6h])) by (severity, source)",
          "refId": "A",
          "legendFormat": "{{severity}} {{source}}"
        }
      ],
      "transformations": [],
      "options": {
        "showHeader": true,
        "footer": {
          "show": false
        }
      }
    }
  ]
}
