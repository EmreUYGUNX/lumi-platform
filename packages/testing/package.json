{
  "name": "@lumi/testing",
  "version": "0.0.0",
  "private": true,
  "description": "Shared testing utilities for the Lumi platform.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./jest": {
      "types": "./dist/assertions/jest.d.ts",
      "default": "./dist/assertions/jest.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "eslint --cache --cache-location .eslintcache \"src/**/*.{ts,tsx}\"",
    "test": "pnpm run test:jest",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test:jest": "jest --config jest.config.cjs --runInBand"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "@faker-js/faker": "^9.1.0",
    "jest-image-snapshot": "^6.4.0",
    "pg": "^8.12.0",
    "supertest": "^6.3.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "ts-jest": "^29.1.3"
  }
}
