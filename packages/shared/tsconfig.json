{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "rootDirs": ["src", "../types/src"],
    "baseUrl": "../../",
    "paths": {
      "@/*": ["packages/shared/src/*"],
      "@lumi/types": ["packages/types/src/index.ts"],
      "@lumi/types/*": ["packages/types/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../types"
    }
  ]
}
