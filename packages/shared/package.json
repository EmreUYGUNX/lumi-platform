{
  "name": "@lumi/shared",
  "version": "0.0.0",
  "description": "Shared utilities and domain logic for the Lumi monorepo.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm --filter @lumi/types build && tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "eslint --cache --cache-location .eslintcache \"src/**/*.{ts,tsx}\"",
    "test": "pnpm run test:jest",
    "test:jest": "jest --config jest.config.cjs --runInBand",
    "test:vitest": "vitest run --passWithNoTests",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "format": "prettier \"src/**/*.{ts,tsx}\" --check"
  },
  "dependencies": {
    "@lumi/types": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@lumi/testing": "workspace:*"
  }
}
