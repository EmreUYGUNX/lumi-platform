{
  "name": "@lumi/ui",
  "version": "0.0.0",
  "description": "Design system primitives and components.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "eslint --cache --cache-location .eslintcache \"src/**/*.{ts,tsx}\"",
    "test": "pnpm run test:jest",
    "test:jest": "jest --config jest.config.cjs --runInBand",
    "test:vitest": "vitest run --passWithNoTests",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "format": "prettier \"src/**/*.{ts,tsx}\" --check"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@lumi/shared": "workspace:*",
    "@lumi/types": "workspace:*"
  },
  "devDependencies": {
    "@lumi/testing": "workspace:*",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "@jest/globals": "^29.7.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
